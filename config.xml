<?xml version="1.0" encoding="utf-8"?>
<widget xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:vs="http://schemas.microsoft.com/appx/2014/htmlapps" id="io.cordova.VlcRemote" version="1.5.0.0" xmlns="http://www.w3.org/ns/widgets">
  <name>VlcRemote</name>
  <description>
    This is a basic remote for the Video Lan Client, short VLC. You can do all the basic things with it, not much more.
    </description>
    <author email="kajmossi@yahoo.de" href="https://github.com/stiller-leser">
        stiller-leser
    </author>
  <content src="index.html" />
  <access origin="*" />
  <preference name="SplashScreen" value="screen" />
  <preference name="Orientation" value="portrait" />
  <preference name="Fullscreen" value="true" />
  <preference name="webviewbounce" value="false" />
  <preference name="DisallowOverscroll" value="true" />
  <platform name="wp8">
    <icon src="img/logo.png" width="99" height="99" />
    <!-- tile image -->
    <icon src="img/logo.png" width="159" height="159" />
  </platform>
  <preference name="UIWebViewBounce" value="false" />
  <vs:features>
    <vs:feature>org.apache.cordova.network-information@0.2.10</vs:feature>
  </vs:features>
  <vs:platformSpecificValues />
</widget>